<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

    <ImageButton
        android:id="@+id/tom1_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="37dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/cymbal1_image_button"
        app:layout_constraintTop_toTopOf="@+id/cymbal1_image_button"
        app:srcCompat="@drawable/tom1" />

    <ImageButton
        android:id="@+id/cymbal3_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="53dp"
        android:layout_marginBottom="72dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/tom3_image_button"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/cymbal3" />

    <ImageButton
        android:id="@+id/bass_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="37dp"
        android:layout_marginEnd="282dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/tom2_image_button"
        app:srcCompat="@drawable/bass" />

    <ImageButton
        android:id="@+id/snare_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="25dp"
        android:layout_marginEnd="36dp"
        android:background="@android:color/transparent"
        app:layout_constraintEnd_toStartOf="@+id/bass_image_button"
        app:layout_constraintTop_toTopOf="@+id/bass_image_button"
        app:srcCompat="@drawable/snare" />

    <ImageButton
        android:id="@+id/tom3_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="24dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/tom2_image_button"
        app:layout_constraintTop_toTopOf="@+id/bass_image_button"
        app:srcCompat="@drawable/tom3" />

    <ImageButton
        android:id="@+id/cymbal2_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="34dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/tom2_image_button"
        app:layout_constraintTop_toTopOf="@+id/tom2_image_button"
        app:srcCompat="@drawable/cymbal2" />

    <ImageButton
        android:id="@+id/hihat_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginEnd="51dp"
        android:layout_marginBottom="43dp"
        android:background="@android:color/transparent"
        app:layout_constraintBottom_toBottomOf="@+id/snare_image_button"
        app:layout_constraintEnd_toStartOf="@+id/snare_image_button"
        app:srcCompat="@drawable/hihat" />

    <ImageButton
        android:id="@+id/cymbal1_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginTop="93dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/hihat_image_button"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/cymbal1" />

    <ImageButton
        android:id="@+id/tom2_image_button"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="35dp"
        android:background="@android:color/transparent"
        app:layout_constraintStart_toEndOf="@+id/tom1_image_button"
        app:layout_constraintTop_toTopOf="@+id/tom1_image_button"
        app:srcCompat="@drawable/tom2" />

</androidx.constraintlayout.widget.ConstraintLayout>